<div class="wrap">
<div class="store">
  DRAG ITEMS HERE
</div>
<ul class="section">
  <% @items.each do |item| %>
    <li class="item">
      <%= link_to image_tag(item.image, size: '220'), item_url(item.id) %>
      <div class="info">
        <h6><%= link_to item.title, item_url(item.id) %></h6>
        <p>$<%= item.price %></p><br>
        <%= link_to "Shop this item", item_url(item.id), class: "shop_button" %><br>
      </div>
    </li>
  <% end %>
</ul>
</div>
