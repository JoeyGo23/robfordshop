<div class="grid_16">
  <% @items.each do |item| %>
    <div class="item grid_4 prefix_1">
      <%= link_to image_tag(item.image, size: '220'), item_url(item.id) %>
      <div class="info">
        <h6><%= link_to item.title, item_url(item.id) %></h6>
        <p>$<%= item.price %></p><br>
        <%= button_to 'Add to Cart', line_items_path(item_id: item) %>
        <%= link_to "Shop this item", item_url(item.id), class: "shop_button" %><br>
      </div>
    </div>
  <% end %>
</div>
