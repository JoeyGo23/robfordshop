<h1>Editing Item #<%= @item.id %></h1>

<%= form_tag(item_url(@item), method: 'patch') do %>
  <div>
    <%= label_tag :title %><br />
    <%= text_field_tag :title, @item.title %>
  </div>

  <div>
    <%= label_tag :price %><br />
    <%= text_field_tag :price, @item.price %>
  </div>

  <div>
    <%= label_tag :image %><br />
    <%= text_field_tag :image, @item.image %>
  </div>

  <div>
    <%= submit_tag "Update Item" %>
  </div>
<% end %>
