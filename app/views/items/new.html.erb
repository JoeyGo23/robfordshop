<h1>New Item</h1>

<%= form_tag(items_url, method: 'post') do %>
  <div>
    <%= label_tag :title %><br />
    <%= text_field_tag :title %>
  </div>

  <div>
    <%= label_tag :price %><br />
    <%= text_field_tag :price %>
  </div>

  <div>
    <%= label_tag :image %><br />
    <%= text_field_tag :image %>
  </div>

  <div>
    <%= submit_tag "Create Item" %>
  </div>
<% end %>
