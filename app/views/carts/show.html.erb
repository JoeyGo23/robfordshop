<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>


<h2>Your Cart</h2>

<ul>
<% @cart.line_items.each do |item| %>
<div class="personal_cart">
  <li><%= item.item.image %></li>
  <li><%= item.item.title %></li>
  <li>Price: $<%= item.item.price %>.00</li>
  <li>Quantity: <%= item.quantity %></li>
  <%= button_to 'Remove Item', @item, method: :delete %>
  <% end %>
</ul>

<%= button_to 'Empty Cart', @cart, method: :delete %>
<p>Your total: <%= number_to_currency(@cart.total_price) %> </p>
</div>

